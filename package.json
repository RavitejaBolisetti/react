{
    "name": "dms-ui-application",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "antd": "^5.3.3",
        "axios": "^1.2.3",
        "bootstrap": "^4.6.0",
        "encrypt-storage": "^2.12.14",
        "history": "^5.3.0",
        "jest": "^27.5.1",
        "jest-sonar": "^0.2.15",
        "jwt-decode": "^3.1.2",
        "moment": "^2.29.4",
        "otp-input-react": "^0.3.0",
        "react": "^18.2.0",
        "react-bootstrap": "^2.7.0",
        "react-checkbox-tree": "^1.8.0",
        "react-dom": "^18.2.0",
        "react-google-recaptcha3": "^1.0.4",
        "react-helmet": "^6.1.0",
        "react-icons": "^4.7.1",
        "react-loading-skeleton": "^3.1.0",
        "react-redux": "^8.0.5",
        "react-router-dom": "^6.7.0",
        "react-scripts": "5.0.1",
        "redux": "^4.2.0",
        "redux-thunk": "^2.4.2",
        "sass": "^1.57.1",
        "ts-node": "^10.9.1",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "coverage": "react-scripts test --coverage --watchAll --collectCoverageFrom='src/components/**/*.{js,.jsx}'  --collectCoverageFrom!='src/components/pages/*.{js,.jsx}'  --transformIgnorePatterns \"node_modules/(?!axios)/\"",
        "sonar": "ts-node sonar-scanner.ts"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/preset-env": "^7.20.2",
        "jest-sonar-reporter": "^2.0.0",
        "react-app-rewired": "^2.2.1",
        "react-checkbox-tree": "^1.8.0",
        "redux-devtools-extension": "^2.13.9",
        "redux-mock-store": "^1.5.4",
        "sonarqube-scanner": "^3.0.1"
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "clover.xml",
        "indent": 4,
        "env": {
            "test": {
                "reportPath": "reports-test"
            }
        }
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 3,
                "functions": 3,
                "lines": 3,
                "statements": -10,
                "isolatedModules": true
            }
        },
        "moduleNameMapper": {
            "axios": "axios/dist/node/axios.cjs"
        }
    }
}
